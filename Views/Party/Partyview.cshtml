@model IEnumerable<SFO.Models.Party>

@{
    ViewData["Title"] = "Party View";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Party ID</th>
            <th>Party Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var party in Model)
        {
            <tr>
                <td>@party.PartyID</td>
                <td>@party.PartyName</td>
                <td>
                    <!-- You can add action buttons like edit or delete here -->
                    <a href="@Url.Action("Edit", "Party", new { id = party.PartyID })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Party", new { id = party.PartyID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
